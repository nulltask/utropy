form.form-stacked(action='/admin/entries', method='post')
  fieldset
    legend add
    .clearfix
      label(for='entry[title]') Title
      .input
        input.xlarge(id='entry[title]', name='entry[title]', size='30', type='text')
    .clearfix
      label(for='entry[body]') Body
      .input
        textarea(id='entry[body]', name='entry[body]', size='50')
  .actions
    button.btn.primary(type='submit') Save
