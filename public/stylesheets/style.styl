.title
  position: fixed
  bottom: 0
  left: 0
  padding: 5px
  font-size: small
  font-family: 'Helvetica Neue'
  color: #777

.number
  position: fixed
  right: 0
  bottom: 0
  padding: 5px
  font-size: small
  font-family: 'Helvetica Neue'
  color: #777

.reload
  position: fixed
  top: 0
  right: 0
  padding: 5px
  // background-color: #888
  font-size: large
  transition: all 0.5s ease-in-out
  &:hover
    transform: rotate(-360deg)
  & a:link
  & a:visited
    text-decoration: none
    color: #888